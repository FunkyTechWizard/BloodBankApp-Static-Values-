<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">


        <include
            layout="@layout/main_toolbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/weekly_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule: Weekly"
            android:textSize="20sp"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: Utsav Patel"
            android:textSize="20sp"
            android:layout_below="@+id/weekly_textview"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/age_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age: 22"
            android:textSize="20sp"
            android:layout_below="@+id/name_textview"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/phone_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number: 705-500-1787"
            android:textSize="20sp"
            android:layout_below="@+id/age_textview"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/email_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Address: ujpatel23088@gmail.com"
            android:textSize="20sp"
            android:layout_below="@+id/phone_textview"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="start">

        <include
            layout="@layout/main_navigation_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>